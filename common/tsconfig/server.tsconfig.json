{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["es6"],
        "target": "es6",
        "importHelpers": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true
    }
}